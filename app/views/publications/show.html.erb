<p style="color: green"><%= notice %></p>

<%= render @publication %>

<div class="form-group">
 <fieldset class="border p-2">
                       <legend class="w-auto">&nbsp;<em><strong>Uploaded Files:</em></strong>&nbsp;</legend>
                         <table class="stripe table-hover text-left hover display row-border compact table table-responsive-lg">
                         <!-- style="word-wrap: break-word;min-width: 10px; max-width: 100%; -->
                         <thead>
                           <tr>
                             <th>File Name</th>
                             <th>FIle Type</th>
                           </tr>
                         </thead>
                        <tbody>
                          <% @publication.my_files.each do |upload| %>
                            <tr id="publication_my_item-<%= upload.id %>">
                              <!--<td><%#=upload.id %></th> -->
                              <td style="width:40em;word-wrap:normal;"><%= upload.filename || "default" %></td>
                              <td><%= upload.content_type %><%#= upload.filename.parameters %></td>
                              </td>
                            </tr>
                          <% end %>
                         </tbody>
                         </table>
                        </fieldset>
</div>

<div>
  <%= link_to "Edit this publication", edit_publication_path(@publication), data:{turbo:true} %> |
  <%= link_to "Back to publications", publications_path, data:{turbo:true} %>

  <%= button_to "Destroy this publication", @publication, method: :delete %>
</div>
